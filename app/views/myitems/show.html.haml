-# 商品詳細ページ
.wrapper
  -# ヘッダー
  = render 'layouts/header'
  .content_wrapper
    .details-wrapper
      .details-wrapper__contents
        = render 'items/show'

        -# ボタン3つ
        .details-wrapper__contents__btn
          = link_to edit_myitem_path, class: "btn-red" do
            商品の編集
          .details-wrapper__contents__btn__or
            or
          = link_to root_path, class: "btn-gray" do
            出品を一旦停止する
          = link_to myitem_path, method: :delete, class: "btn-gray" do
            この商品を削除する
  -# フッター
  = render 'layouts/footer'